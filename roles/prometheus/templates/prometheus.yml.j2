global:
  scrape_interval: 15s
  evaluation_interval: 15s

alerting:
  alertmanagers:
    - static_configs:
        - targets: ['localhost:9093']

rule_files:
  # Add alerting rules here (e.g., /etc/prometheus/rules.yml)
  - "{{ prometheus_config_dir }}/rules.yml"

scrape_configs:
  - job_name: 'prometheus'
    static_configs:
      - targets: ['localhost:9090']
{% for target in prometheus_scrape_targets %}
  - job_name: '{{ target.job_name }}'
    static_configs:
      - targets: {{ target.targets | to_json }}
{% endfor %}