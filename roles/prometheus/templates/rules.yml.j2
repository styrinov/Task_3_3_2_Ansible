groups:
- name: example
  rules:
  - alert: HighCPUUsage
    expr: 100 - (avg by(instance) (rate(node_cpu_seconds_total{mode="idle"}[5m])) * 100) > 80
    for: 5m
    labels:
      severity: warning
    annotations:
      summary: "High CPU usage on {{ '{{' }} $labels.instance {{ '}}' }}"
      description: "{{ '{{' }} $labels.instance {{ '}}' }} has CPU usage above 80% for 5 minutes."